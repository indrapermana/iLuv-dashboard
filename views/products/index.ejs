<% include ../partials/header %>
	<h1>Products
		<a href="/products/add" class="btn btn-success pull-right">Add Products</a>
	</h1>

	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Event</th>
				<th>Url site</th>
				<th>Site name</th>
				<th>Price</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% for(var i=0;i < products.length; i++) { %>
				<tr>
					<td>
						<%= products[i].name %>
					</td>
					<td>
						<%= products[i].event %>
					</td>
					<td>
						<%= products[i].url_site %>
					</td>
					<td>
						<%= products[i].site_name %>
					</td>
					<td>
						<%= products[i].price %>
					</td>
					<td>
						<a href="/products/details/<%= products[i].id %>" class="btn btn-default">Detail</a>
						<a href="/products/edit/<%= products[i].id %>" class="btn btn-default">Edit</a>
						<a href="/products/export/<%= products[i].id %>" class="btn btn-default">Export</a>						
						<a data-id="<%= products[i].id %>" class="btn btn-danger delete-product">Delete</a>
					</td>
				</tr>
				<% } %>
		</tbody>
	</table>
	<% include ../partials/footer %>
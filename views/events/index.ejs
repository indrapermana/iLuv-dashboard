<% include ../partials/header %>
	<h1>Events
		<a href="/events/add" class="btn btn-success pull-right">Add Event</a>
	</h1>

	<table class="table table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% for(var i=0;i < events.length; i++) { %>
				<tr>
					<td><%= events[i].name %></td>
					<td>
						<a href="/events/edit/<%= events[i].id %>" class="btn btn-default">Edit</a>

						<a data-id="<%= events[i].id %>" class="btn btn-danger delete-event">Delete</a>
					</td>
				</tr>
			<% } %>
		</tbody>
	</table>
<% include ../partials/footer %>
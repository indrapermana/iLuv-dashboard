<% include ../partials/header %>
<h1>Brands
    <a href="/brands/add" class="btn btn-success pull-right">Add Brand</a>
</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% for(var i=0;i < brands.length; i++) { %>
            <tr>
                <td><%= brands[i].name %></td>
                <td>
                    <a href="/brands/edit/<%= brands[i].id %>" class="btn btn-default">Edit</a>

                    <a data-id="<%= brands[i].id %>" class="btn btn-danger delete-brand">Delete</a>
                </td>
            </tr>
        <% } %>
    </tbody>
</table>
<% include ../partials/footer %>